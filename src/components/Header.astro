---
import { Image } from "astro:assets";
import logo from "../images/res/Picture1.png";
---

<nav class="fixed top-0 left-0 w-screen bg-transparent bg-opacity-90 px-4 flex items-center justify-between z-10 transition-all ease-in-out duration-300">

  <div class="flex items-center bg-[#0099CD] h-16 px-4 rounded-b-lg text-white text-lg font-bold">
    <h1 class="ml-2">Agenda con Nosotros</h1>
  </div>

  <div class="hidden md:flex items-center space-x-6">
    <a href="#" class="text-white hover:text-blue-200">Inicio</a>
    <a href="#aboutUs" class="text-white hover:text-blue-200">Servicios</a>
    <a href="#technologies" class="text-white hover:text-blue-200">Productos</a>
    <a href="#services" class="text-white hover:text-blue-200">Nosotros</a>
    <a href="#solutions" class="text-white hover:text-blue-200">Contacto</a>

  </div>

  <div class="flex items-center text-white text-lg font-bold pr-4 animate-pulse ">
    <Image class="h-8 w-auto" src={logo} alt="Innova logo" />
    <h1 class="mr-4">Innovalink</h1>
  </div>

  <div class="md:hidden">
    <button id="menu-button" class="text-white focus:outline-none">
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</nav>

<div id="mobile-menu" class="md:hidden hidden bg-blue-500">
  <a href="/" class="block px-4 py-2 text-white hover:bg-blue-700">Home</a>
  <a href="/about" class="block px-4 py-2 text-white hover:bg-blue-700">About us</a
  >
  <a href="/services" class="block px-4 py-2 text-white hover:bg-blue-700"
    >Technologies</a
  >
  <a href="/contact" class="block px-4 py-2 text-white hover:bg-blue-700"
    >services</a
  >
  <a href="/contact" class="block px-4 py-2 text-white hover:bg-blue-700"
    >Solutions</a
  >
  <a href="/contact" class="block px-4 py-2 text-white hover:bg-blue-700"
    >Contact</a
  >
</div>

<script>
  const menuButton = document.getElementById("menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  menuButton.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });
  
</script>
