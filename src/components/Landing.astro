---
import { Image } from "astro:assets";
import logo from "../assets/logo-innovalink.png";
import Header from "./Header.astro";
import Banner1 from "./Banner1.astro";
import AboutUs from "./AboutUs.astro";
import Services from "./Services.astro";
import Solutions from "./Solutions.astro";
import HeroHelpdeks from "./HeroHelpdeks.astro";
---

<Header />

<div class="flex flex-col">
  <div class="h-screen flex items-center justify-center px-6 lg:px-12 pt-[1%] sm:pt-[20%] lg:pt-[20%] 2xl:pt-[1%]">
    <div class="z-10 flex flex-col xl:flex-row xl:space-x-32 items-center text-center">
      <div class="flex flex-col items-center">
        <Image src={logo} alt="logo" class="sm:w-[45rem] sm:h-[30em]" />
        <h3 class="text-white text-base sm:text-lg lg:text-[40px] mt-4">
          INNOVATE TECHNOLOGY SOLUTIONS
        </h3>
        <div class="pt-12">
          <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-xl transition duration-300">
            Agenda con nosotros
          </button>
        </div>
  
        
      </div>
    </div>
  </div>


</div>
